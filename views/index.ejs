<% layout("/layouts/boilerplate") %>
<body>
  
    <h3>All Listings</h3>
    <!-- <form method="get" action="/listing/new">
        <button>New Listing</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1"> <%for(let listing of allListings){%>
    
    <div class="card col">
        <a href="/listing/<%=listing._id%>" class="listing-link">
        <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image" style="height:20rem"/>
        <div class="card-body">
            <div class="card-img-overlay"></div>
          <!-- <h5 class="card-title">Card title</h5> -->
          <p class="card-text"> <b><%=listing.title%></b>
       <br>
       &#8377 <%= listing.price ? listing.price.toLocaleString("en-IN") : "Price not available" %>/Night

    </p></a>
    
        </div>
      </div>
   
        
    
    
    <%}%> </div>
   

</body>

