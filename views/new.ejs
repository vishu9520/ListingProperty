<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
<body>
    

    <form method="post" action="/listing" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="enter title" type="text" class="form-control"
            required />
            <div class="valid-feedback">Tittle Looks Good</div>
            
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">description</label>
            <textarea name="listing[description]" placeholder="enter description" type="text" class="form-control"
            required></textarea>
            <div class="invalid-feedback">Invalid Label </div>
        </div>
       <div class="mb-3">
        <label for="image" class="form-label">image</label>
        <input name="listing[image]" placeholder=" enter imageURL/Link" type="text" class="form-control" required>
        <div class="invalid-feedback">Invalid link </div>
       </div>
       <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">price</label>
             <input name="listing[price]" placeholder="enter price"  class="form-control" required > 
            <div class="invalid-feedback">Please enter a valid price</div>
        </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">country</label>
                <input name="listing[country]" placeholder="enter price" type="text" class="form-control" required>
                <div class="invalid-feedback">Invalid country </div>
            </div> 
   
       </div>
           
       
        <div class="mb-3">
            <label for="location" class="form-label">location</label>
            <input name="listing[location]" placeholder="enter location" type="text" class="form-control"required>
            <div class="invalid-feedback">Invalid location </div>
        </div>
        
        <button class="btn btn-dark add-btn">Add</button>
    </form>
</body>
</div>
</div>